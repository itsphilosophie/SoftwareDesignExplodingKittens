<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="deckController">
   <children>
      <HBox layoutX="30.0" layoutY="47.0">
         <children>
            <ImageView fx:id="deckPileImage" fitHeight="306.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="backCard.jpg" />
               </image>
            </ImageView>
            <ImageView fx:id="discardPileImage" fitHeight="306.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="discardPile.png" />
               </image>
            </ImageView>
         </children>
      </HBox>
      <StackPane layoutX="509.0" layoutY="188.0">
         <children>
            <Button mnemonicParsing="false" onAction="#drawCard" text="Draw Card" />
         </children>
      </StackPane>
   </children>
</AnchorPane>
